// thanks to https://github.dev/HTBox/TwoWeeksReady/tree/main/.devcontainer
{
	"dockerFile": "Dockerfile",
	"forwardPorts": [ 6080, 5901 ],
	
	"features": {
		"node": {
			"version": "lts",
			"nodeGypDependencies": true
		},
		"desktop-lite": {
			"password": "vscode",
			"webPort": "6080",
			"vncPort": "5901"
		},
		"github-cli": "latest"
	},


	// Comment out connect as root instead. More info: https://aka.ms/vscode-remote/containers/non-root.
	"remoteUser": "vscode"
}
